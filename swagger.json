              "schema": {
                "type": "string"
              }
            },
            {
              "name": "body",
              "in": "body",
              "required": true,
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          ],
          "responses": {
            "204": {
              "description": "Registro atualizado com sucesso"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "User": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "name": {
              "type": "string"
            },
            "usuario": {
              "type": "string"
            },
            "senha": {
              "type": "string"
            },
            "confirmacao": {
              "type": "string"
            },
