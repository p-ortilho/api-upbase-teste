      },
      "/registration/{id}": {
        "delete": {
          "summary": "Remove um registro de usu치rio pelo ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "204": {
              "description": "Registro removido com sucesso"
            }
          }
        },
        "put": {
